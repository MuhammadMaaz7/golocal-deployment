{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/config/**",
          "server/controllers/**",
          "server/middleware/**",
          "server/models/**",
          "server/routes/**",
          "server/uploads/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    }
  ]
}
